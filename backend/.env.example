# Street Governance Backend Configuration

# =============================================================================
# Required
# =============================================================================

# PostgreSQL connection string
DATABASE_URL=postgresql://governance:password@localhost:5432/street_governance

# Base L2 RPC endpoint
BASE_RPC_URL=https://mainnet.base.org

# Contract addresses (get from SOL team after deployment)
GOVERNOR_ADDRESS=0x0000000000000000000000000000000000000000
EDIT_SUGGESTIONS_ADDRESS=0x0000000000000000000000000000000000000000
FUTARCHY_TREASURY_ADDRESS=0x0000000000000000000000000000000000000000

# =============================================================================
# Optional
# =============================================================================

# API server port (default: 3000)
PORT=3000

# Use Base Sepolia testnet instead of mainnet
BASE_TESTNET=false

# Block to start indexing from (default: 0)
# Set this to the contract deployment block for efficiency
INDEXER_START_BLOCK=0

# Number of confirmations to wait for finality (default: 64)
# Base L2 ~2 second blocks = ~2 minutes
INDEXER_CONFIRMATION_DEPTH=64

# Maximum blocks to process per batch (default: 1000)
INDEXER_BATCH_SIZE=1000

# Polling interval in milliseconds (default: 2000)
INDEXER_POLL_INTERVAL_MS=2000
